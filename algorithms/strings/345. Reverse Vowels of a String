class Solution {
public:
    string reverseVowels(string s) {
        string vowels = "aeiouAEIOU";

        int left = 0;
        int right = s.length() - 1;

        while (left < right) {
            // Move left forward until a vowel
            while (left < right) {
                int j;
                for (j = 0; j < vowels.length(); j++) {
                    if (s[left] == vowels[j]) break; // found vowel
                }
                if (j < vowels.length()) break; // left is vowel, exit while
                left++;
            }

            // Move right backward until a vowel
            while (left < right) {
                int j;
                for (j = 0; j < vowels.length(); j++) {
                    if (s[right] == vowels[j]) break; // found vowel
                }
                if (j < vowels.length()) break; // right is vowel, exit while
                right--;
            }

            // Swap vowels
            if (left < right) {
                char temp = s[left];
                s[left] = s[right];
                s[right] = temp;
                left++;
                right--;
            }
        }

        return s;
    }
};
